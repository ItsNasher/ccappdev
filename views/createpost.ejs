<html>
    <head>
        <title>Create Post</title>
        <link rel = "icon" href = "/images/logo.png">
        <link rel = "stylesheet" href = "createpost.css">
    </head>

    <body>
        <nav class = "header">
            <div class = "logo">
                <a href = "/">
                    <img src = "/images/logo.png">
                </a>
            </div>

            <ul class = "headerlinks">
                <li class = "links"><a href="#"> Chat </a></li>
                <li class = "links"><a href="/home"> Home </a></li>
            </ul>
        </nav>

        <hr style = "border: 0; height: 1px; background: white;">

        <div class = "mainbody">

            <div class = "sidebar">
                <button class="back"><a href="/home">â¬… Back</a></button>
                <button class = "sidebar-button" id = "profile-button" onclick="goToProfile()"> Profile </button>
                <button class = "sidebar-button" id = "createpost">Create Post</button>
                <button class = "sidebar-button" id = "logout-button"><a href = "/">Log Out</a></button>
            </div>
            <form class = "createbody" action="/createpost" method="POST" enctype="multipart/form-data">
                <p class="headertitle">Create Post</p>
                <button type="button" class="tags" id="add-tags-btn">Add tags</button>
                <input type="hidden" id="tags" name="tags">

                <div id="selected-tags-container">
                    <div id="selected-tags"></div>
                </div>

                <nav class = "mediatype">
                    <div class="mediatype-tabs">
                        <div class="tab active" data-type="text" onclick="setContentType('text')">Text</div>
                        <div class="tab" data-type="image" onclick="setContentType('image')">Image</div>
                        <div class="tab" data-type="video" onclick="setContentType('video')">Video/Link</div>
                    </div>
                </nav>

                <input type="hidden" id="content_type" name="content_type" value="text">

                    <div class="inputbox">
                        <textarea placeholder="Title..." type="text" id="title" name="title" required></textarea>
                        <div class="subtext">
                            <div class="text">Title</div>
                            <span id="char-counter">0/400</span> 
                        </div>
                    </div>


                    <div id="content-box">
                        <textarea placeholder="Write something..." rows="5" id="content" name="content"></textarea>
                    </div>
                    <button type="submit" id="create-post" disabled>Post</button>
            </form>
                <!-- pop up for the add tags -->
                <div id="tags-modal" class="modal">
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <input type="text" id="new-tag-input" placeholder="Add new tag...">
                        <button id="add-new-tag">Add Tag</button>
                        <p>Select tags:</p>
                        <div id="tag-list">
                            <button class="tag-btn" data-tag="News">News</button>
                            <button class="tag-btn" data-tag="Tech">Tech</button>
                            <button class="tag-btn" data-tag="Sports">Sports</button>
                            <button class="tag-btn" data-tag="Gaming">Gaming</button>
                        </div>
                        <p>Selected: <span id="selected-tags"></span></p>
                        <button id="confirm-tags">Confirm</button>
                    </div>
                </div>
            <script src="links.js"></script>
    </body>
</html>